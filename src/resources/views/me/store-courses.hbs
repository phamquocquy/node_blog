<div class="mt-4">
    <table class="table">
  <thead>
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Name</th>
      <th scope="col">Ngày tạo</th>
      <th scope="col" colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    {{#each courses}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.name}}</td>
      <td>{{this.createdAt}}</td>
      <td><a href="/course/{{this._id}}/edit">Sửa</a></td>
      <td><a href="">Xóa</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>